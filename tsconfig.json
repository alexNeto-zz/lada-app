{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@components/*": ["app/components/*"],
      "@enums/*": ["app/content/enums/*"],
      "@interfaces/*": ["app/content/interfaces/*"],
      "@models/*": ["app/content/models/*"],
      "@pipes/*": ["app/content/pipes/*"],
      "@services/*": ["app/content/services/*"],
      "@modules/*": ["app/modules/*"],
      "@views/*": ["app/views/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"]
  }
}
